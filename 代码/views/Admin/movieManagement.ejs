<script>
	$("#addButton").click(function () {
		$("#addModel").modal('show');
	});

	/**
     * 分类算法
     */
    $(document).ready(function () {
	    var counter = 0; /*计数器*/
	    var pageStart = 0; /*offset*/
	    var pageSize = 20; /*size*/

	    loadMovieList(pageStart, pageSize);

	    /*监听加载更多*/
	    $("#showOther").click(function () {
		    counter ++;
		    pageStart = counter * pageSize;

		    loadMovieList(pageStart, pageSize);
	    });
    });

	/**
	 * 电影显示
	 */
	function loadMovieList(offset,size) {
		var success = function (data) {
			var sum = data.length;        // 获取总长度
			if (sum - offset < size){
				size = sum - offset;
			}
			for (var i = offset;i < (offset + size);i++){
				$("#userTable").append(`
                       <tr>
                            <td><a href="#">`+ data[i].title +`</a></td>
                            <td><a href="#">`+ data[i].original_title +`</a></td>
                            <td><a href="#">`+ data[i].year +`</a></td>
                            <td><a href="#">`+ data[i].directors +`</a></td>
                            <td><a href="#">`+ data[i].casts +`</a></td>
                            <td><a href="#">`+ data[i].genres +`</a></td>
                            <td>
                                <a href="#" movieInfoId="`+ data[i].id +`" class="btn btn-success btn-xs modifyButton"><i class="fa fa-edit"></i> 修改</a>
                                <a href="#" movieInfoId="`+ data[i].id +`" class="btn  btn-danger btn-xs deleteButton"><i class="fa fa-trash"></i> 删除</a>
                            </td>
                        </tr>
                `);
			}
			if ( (offset + size) >= sum){
				$("#showOther").hide();
			}else{
				$("#showOther").show();
			}
		};
		Get("/admin/movie/getAll",success);

		$(".modifyButton").click(function () {
			var movieInfoId = $(this).attr("movieInfoId");
			$("#modifyModel").modal("show");

			$("#modifyModelCommitButton").click(function () {


				var title = $("#modifyTitle").val();
				var original_title = $("#modifyOriginal_title").val();
				var image = $("#modifyImage").val();
				var directors = $("#modifyDirectors").val();
				var genres = $("#modifyGenres").val();
				var year = $("#modifyYear").val();
				var casts = $("#modifyCasts").val();

				$.ajax({
					url: "/admin/movie/modifyMovie/" + movieInfoId + "/" + title + "/" + original_title + "/" + image + "/"
					+ directors + "/" + genres + "/" + year + "/" + casts,
					type:"GET",
					contentType: "application/json",
					success: function () {
						swal({
							title: "修改成功",
							text: "修改成功",
							type: "success",
							confirmButtonText: "知道了"
						});
					},
					error: function (XMLHttpRequest, textStatus, errorThrown) {
						swal({
							title: "出错了！",
							text: "错误信息" + XMLHttpRequest.status,
							type: "error",
							confirmButtonText: "知道了"
						});
					}
				});
				$("#modifyModelCancelButton").click();
			});



		});
		$(".deleteButton").click(function () {
			var movieInfoId = $(this).attr("movieInfoId");
			swal({
					title: "确定删除吗？",
					text: "你将无法恢复！",
					type: "warning",
					showCancelButton: true,
					confirmButtonColor: "#DD6B55",
					confirmButtonText: "确定删除！",
					closeOnConfirm: false
				},
				function(){
					Delete("/admin/movie/delete/"+ movieInfoId);
					flushCurrent();
				});
		});
	}

	/**
     * 添加电影信息
	 */
	$("#addButton").click(function () {
       $("#addModelCommitButton").click(function () {
           var title = $("#title").val();
	       var original_title = $("#original_title").val();
	       var image = $("#image").val();
	       var directors = $("#directors").val();
	       var genres = $("#genres").val();
	       var year = $("#year").val();
	       var casts = $("#casts").val();

	       $.ajax({
		       url: "/admin/movie/createMovie/" + title + "/" + original_title + "/" + image + "/"
                    + directors + "/" + genres + "/" + year + "/" + casts,
		       type:"GET",
		       contentType: "application/json",
		       success: function () {
			       swal({
				       title: "添加成功",
				       text: "添加成功",
				       type: "success",
				       confirmButtonText: "知道了"
			       });
			       flushCurrent();
		       },
		       error: function (XMLHttpRequest, textStatus, errorThrown) {
			       swal({
				       title: "出错了！",
				       text: "错误信息" + XMLHttpRequest.status,
				       type: "error",
				       confirmButtonText: "知道了"
			       });
		       }
	       });
	       $("#addModelCancelButton").click();
       });
	});
    // 刷新本页
	var flushCurrent = function () {
		$.ajax({
			type: 'GET',
			url: "/admin/movie",
			success: function (msg) {
				$.ajaxSetup({
					async: false
				});
				$("#mainPage").empty().append(msg);
			}
		});
	}

